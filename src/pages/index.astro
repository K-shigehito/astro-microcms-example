---
import Layout from '@layouts/Layout.astro';
import { getCats } from '@library/useApi';
import CatsList from '@components/CatsList.svelte';

const data = await getCats({ limit: 3 });
const cats = data.contents;
---

<Layout title="Dear Cats">
  <main>
    <CatsList cats={cats} />
    <div class="mt-10">
      <a
        href="/cats/page/1"
        class="rounded-full border border-stone-500 bg-stone-200 py-2 px-6 font-barlow-semi font-bold duration-150 hover:bg-stone-300"
        >more cats</a
      >
    </div>
  </main>
</Layout>
